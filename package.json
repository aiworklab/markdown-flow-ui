  "license": "MIT",
  "lint-staged": {
    "*.md": [
      "markdownlint --fix"
    ],
    "src/**/*.{css,scss,json}": [
      "prettier --write"
    ],
    "src/**/*.{js,jsx,ts,tsx,mjs,cjs}": [
      "next lint --fix --max-warnings 0 --file",
      "prettier --write"
    ]
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "name": "markdown-flow-ui",
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ai-shifu/markdown-flow-ui.git"
  },
  "scripts": {
    "//build": "next build",
    "build": "vite build",
    "build-storybook": "storybook build",
    "bump": "standard-version",
    "bump:major": "standard-version --release-as major",
    "bump:minor": "standard-version --release-as minor", 
    "bump:patch": "standard-version --release-as patch",
    "bump:prerelease": "standard-version --prerelease",
    "changelog": "standard-version --dry-run",
    "commit": "cz",
    "dev": "next dev --turbopack",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "next lint --max-warnings 0 && npm run lint:md",
    "lint:fix": "next lint --fix --max-warnings 0 && npm run lint:md:fix",
    "lint:md": "markdownlint *.md",
    "lint:md:fix": "markdownlint --fix *.md",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "release": "npm run build && npm run test && standard-version && git push --follow-tags",
    "release:dry": "standard-version --dry-run",
    "start": "next start",
    "storybook": "storybook dev -p 6006",
    "test": "echo \"No tests specified\" && exit 0",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "types": "dist/index.d.ts",
  "version": "0.1.0-alpha.26"
}
